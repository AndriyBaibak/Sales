<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <GridLayout

        android:id="@+id/categoryGrid"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:columnCount="3"
        android:layout_gravity="center">

        <Button
            android:layout_rowWeight="1"
            android:text="Category 1"/>

        <Button
            android:layout_rowWeight="1"
            android:text="Category 2"/>

        <Button
            android:layout_rowWeight="1"
            android:text="Category 3"/>

        <Button
            android:layout_rowWeight="1"
            android:text="Category 4" />

        <Button
            android:layout_rowWeight="1"
            android:text="Category 5" />

        <Button
            android:layout_rowWeight="1"
            android:text="Category 6" />

        <Button
            android:layout_rowWeight="1"
            android:text="Category 7" />

        <Button
            android:layout_rowWeight="1"
            android:text="Category 8" />

        <Button
            android:layout_rowWeight="1"
            android:text="Category 9" />

        <Button
            android:layout_rowWeight="1"
            android:text="Category 10" />

        <Button
            android:layout_rowWeight="1"
            android:text="Category 11" />

        <Button
            android:layout_rowWeight="1"
            android:text="Category 12" />


    </GridLayout>

    <LinearLayout
        android:id="@+id/buttons"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:gravity="bottom"
        android:background="#000000"
        android:layout_weight="8">

        <ImageButton
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_cart"
            android:layout_weight="1"/>

        <ImageButton
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_chart_areaspline"
            android:layout_weight="1"/>

        <ImageButton
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_facebook_messenger"
            android:layout_weight="1"/>
    </LinearLayout>
</LinearLayout>