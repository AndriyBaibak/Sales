<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:sales="http://schemas.android.com/apk/res-auto">

    <data class="AddressDataBinding">
        <variable
            name="viewModel"
            type="com.example.baibaka.salers.viewmodel.AddressViewModel" />

        <variable
            name="handler"
            type="com.example.baibaka.salers.ImgClickHandler" />
    </data>

  <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_margin="8dp">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="5"
        android:orientation="vertical">

        <TextView
            android:id="@+id/addrName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="25sp"
            android:text="@{viewModel.addrName}"/>

        <TextView
            android:id="@+id/addrInfo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@{viewModel.addrInfo}"/>
    </LinearLayout>

    <ImageButton
        android:id="@+id/imageview_icon"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:layout_gravity="right"
        android:background="#ffffff"
        sales:imgSrc="@{viewModel.imgScrId}"
        android:onClick="@{(v) -> handler.onImgClick(viewModel)}"
        />


</LinearLayout>
    </layout>