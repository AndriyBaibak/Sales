<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:sales="http://schemas.android.com/tools">

    <data class="CategoryDataBinding">

        <variable
            name="category"
            type="com.example.baibaka.salers.viewmodel.CategoryViewModel" />
        <variable
            name="handler"
            type="com.example.baibaka.salers.ImgClickHandler" />
    </data>


    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:layout_gravity="center"
        android:layout_margin="10dp"
        android:padding="10dp"
        card_view:cardCornerRadius="4dp">


        <RelativeLayout
            android:id="@+id/category"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center">

            <ImageView
                android:id="@+id/categoryImg"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_margin="8dp"
                sales:loadImage="@{category.imageUrl}"
                android:layout_above="@+id/linearLayout"
                android:onClick="@{(v) -> handler.onImgClick(category)}"/>

            <LinearLayout
                android:id="@+id/linearLayout"
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:orientation="horizontal"
                android:layout_margin="8dp"
                android:layout_alignParentBottom="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true">

                <TextView
                    android:id="@+id/categoryName"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="7"
                    android:paddingLeft="4dp"
                    android:text="@{category.name}" />

                <TextView
                    android:id="@+id/itemQnt"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="4"
                    android:paddingLeft="4dp"
                    android:text="К-сть позицій:" />

                <TextView
                    android:id="@+id/itemCount"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:paddingLeft="4dp"
                    android:text="@{category.itemCount}" />
            </LinearLayout>
        </RelativeLayout>
    </android.support.v7.widget.CardView>
</layout>